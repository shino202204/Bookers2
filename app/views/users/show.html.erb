<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>

<h2>User info</h2>
  <span><%= image_tag @user.get_image(100,100) %></span>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>introduction</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <td><%= @user.name %></td>
      <td><%= @user.introduction %></td>
    </tbody>
  </table>
  <% if @user == current_user %>
    <%= link_to "編集アイコン", edit_user_path(@user.id) %>
  <% else %>
    <%= link_to "編集アイコン", user_path(current_user.id) %>
  <% end %>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <dvi class="field">
    <label>Opinion</label>
    <%= f.text_area :body %>
  </dvi>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <td><%= image_tag book.user.get_image(100,100) %></td>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tbody>
  <% end %>
</table>
