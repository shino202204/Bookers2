<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>

      <% if @user.errors.any? %>
        <%= @user.errors.count %> errors prohibited this book from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f|%>
      <div class="field form-group">
        <label for="book_title">Name</label>
          <span class="book_title" id="book_title">
          <%= f.text_field :name, class: "form-control" %>
          </span>
      </div>

      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %>
      </div>

      <div class="field form-group">
        <label for="book_body">Introduction</label>
          <span class="book_body" id="book_body">
          <%= f.text_area :introduction, class: "form-control"%>
        </span>
      </div>

      <div class="actions form-group">
        <%= f.submit 'Update User', class: "btn btn-secondary"%>
      </div>
      <% end %>

    </div>
  </div>
</div>