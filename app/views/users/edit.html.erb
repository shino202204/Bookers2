<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>

<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
  <label for="inputImage">Image</label>
  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <label>Introduction</label>
  <%= f.text_field :Introduction, accept: "image/*" %><br>
  <%= f.submit "Update User" %>
<% end %>