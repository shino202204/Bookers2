<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2Ver2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/df8953a730.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body class="d-flex flex-column vh-100">
      <header class="shadow-sm bg-dark">
        <nav class="navbar navbar-expand-lg navbar-light">
          <div class="container">
            <%= link_to "Bookers", root_path, class: "navbar-brand p-3 text-white" %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <i class="fas fa-home" style="color: white;"></i>
                  <%= link_to "Home", user_path(current_user.id) %>
                </li>
                <li>
                  <i class="fas fa-users" style="color: white;"></i>
                  <%= link_to "Users", users_path %>
                </li>
                <li>
                  <i class="fas fa-book-open" style="color: white;"></i>
                  <%= link_to "Books", books_path %>
                </li>
                <li>
                  <i class="fas fa-sign-out-alt" style="color: white;"></i>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                  <li>
                    <i class="fas fa-home" style="color: white;"></i>
                    <%= link_to "Home", root_path %>
                  </li>
                  <li>
                    <i class="fas fa-link" style="color: white;"></i>
                    <%= link_to "About", about_path %>
                  </li>
                  <li>
                    <i class="fas fa-user-plus" style="color: white;"></i>
                    <%= link_to "Sign up", new_user_registration_path %>
                  </li>
                  <li>
                    <i class="fas fa-sign-in-alt" style="color: white;"></i>
                    <%= link_to "Log in", new_user_session_path %>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
      <div class="container">
        <div class="row">
        <%= yield %>
        </div>
      </div>
    </main>

    <footer class="bg-dark text-white pt-5 pb-4">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>

</html>
