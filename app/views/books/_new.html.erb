<div class="col-md-3">
  <div class="sidebar_content">
  <% if book.errors.any? %>
    <%= book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h2>User info</h2>
    <span><%= image_tag user.get_image(100,100) %></span>
    <table class="table">
      <thead>
        <tr>
          <th>name</th>
          <th>introduction</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
      </tbody>
    </table>
    <div class="row">
      <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block edit_user_9170", method: :get do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: book, url: '/books', method: :post do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <dvi class="field">
      <label>Opinion</label>
      <%= f.text_area :body %>
    </dvi>
    <div class="actions">
      <%= f.submit 'Create Book', class: "btn btn-success"%>
    </div>
  <% end %>
  </div>
</div>