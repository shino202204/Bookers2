      <!--<i class="fas fa-user-cog"></i>-->
    <!--< end %>-->
  <!--< end %>-->

<h2>New book</h2>
<%= form_with model: book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <dvi class="field">
    <label>Opinion</label>
    <%= f.text_area :body %>
  </dvi>
  <div class="actions">
    <%= f.submit 'Create Book', class: "btn btn-success"%>
  </div>
<% end %>
</div>
</div>