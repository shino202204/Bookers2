<div class="col-md-4">
<% if book.errors.any? %>
  <%= book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
  <span><%= image_tag user.get_image(100,100) %></span>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>introduction</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <td><%= user.name %></td>
      <td><%= user.introduction %></td>
    </tbody>
  </table>
  <% if user == current_user %>
    <i class="fa-solid fa-user-gear"></i>
    <%= link_to "編集アイコン", edit_user_path(user.id) %>
  <% else %>
    <%= link_to "編集アイコン", user_path(current_user.id) %>
  <% end %>

<h2>New book</h2>
<%= form_with model: book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <dvi class="field">
    <label>Opinion</label>
    <%= f.text_area :body %>
  </dvi>
  <div class="actions">
    <%= f.submit 'Create Book', class: "btn btn-success"%>
  </div>
<% end %>
</div>