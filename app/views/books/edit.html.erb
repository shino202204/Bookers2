<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<span class="edit_book" id="edit_book_67047">
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f|%>
<div class="field">
  <label for="book_title">Title</label>
    <span class="book_title" id="book_title">
    <%= f.text_field :title %>
    </span>
</div>

<dvi class="field">
  <label for="book_body">Body</label>
    <span class="book_body" id="book_body">
    <%= f.text_area :body %>
  </span>
</dvi>

<br>
<div class="actions">
  <%= f.submit 'Update Book', class: "btn btn-success"%>
</div>
<% end %>
</span>

<%= link_to 'Show', book_path(@book.id) %>
<span>|</span>
