<%= render 'new', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">

<% if flash[:notice] %>
  <p id="notice">
  <%= flash[:notice] %>
  </p>
<% end %>

<h2>Book detail</h2>
<table class="table">
  <tr>
    <td>
      <%= link_to image_tag(@book_detail.user.get_image(100,100)), user_path(@book_detail.user.id) %>
      <%= link_to @book_detail.user.name, user_path(@book_detail.user.id) %>
    </td>
    <td><%= @book_detail.title %></td>
    <td><%= @book_detail.body %></td>
    <% if @book_detail.user == current_user %>
      <td>
        <%= link_to 'Edit', edit_book_path(@book_detail.id), class: "btn btn-success"%>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(@book_detail.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger"%>
      </td>
    <% end %>
  </tr>
</table>


</div>