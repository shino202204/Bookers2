<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>

<h2>User info</h2>
  <span><%= image_tag @user.get_image(100,100) %></span>
  <table>
    <thead>
      <tr>
        <th>name</th>
        <th>introduction</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <td><%= @user.name %></td>
      <td><%= @user.introduction %></td>
    </tbody>
  </table>
  <span><%= link_to "編集アイコン", edit_user_path(@user.id)%></span>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <dvi class="field">
    <label>Opinion</label>
    <%= f.text_area :body %>
  </dvi>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<% if flash[:notice] %>
  <p id="notice">
  <%= flash[:notice] %>
  </p>
<% end %>

<h2>Book detail</h2>
  <p>
    <%= image_tag @book_detail.user.get_image(100,100) %>
    <%= link_to @book_detail.user.name, user_path(@book_detail.user.id) %>
  </p>
  <%= @book_detail.title %>
  <%= @book_detail.body %>
  <%= link_to 'Edit', edit_book_path(@book_detail.id) %>
  <%= link_to 'Destroy', book_path(@book_detail.id), method: :delete, "data-confirm" => "本当に消しますか？" %>